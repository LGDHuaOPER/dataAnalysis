span.glyphicon
.g_info_m_in span.input-group-addon
	cursor pointer

div.container-fluid>.row:not(:last-child)>div
	border-bottom 1px dashed #ccc

@media screen and (max-width 992px)
	.panel-body
		padding 5px
	
	div[role='tabpanel']
		& .chart_map_foot
			table
				th
					padding 2px
					font-size 12px
				& td
					padding 2px
					font-size 12px